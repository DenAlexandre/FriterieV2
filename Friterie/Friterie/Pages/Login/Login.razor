@page "/login"
@using Friterie.BlazorServer.Services
@using System.Security.Claims
@using Friterie.Context
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@inject ApiServiceView ApiService
@inject AuthenticationStateProvider AuthProvider
@inject AuthStateServiceView AuthStateService
@inject NavigationManager Navigation
@inject IHttpContextAccessor HttpContextAccessor
@attribute [AllowAnonymous]

<PageTitle>Connexion - Friterie</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h3 class="card-title text-center mb-4">🍔 Connexion</h3>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            @errorMessage
                            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control form-control-lg"
                               @bind="email"
                               placeholder="votre@email.com" />
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Mot de passe</label>
                        <input type="password" class="form-control form-control-lg"
                               @bind="password"
                               placeholder="••••••••" />
                    </div>

                    <button class="btn btn-primary btn-lg w-100 mb-3"
                            @onclick="HandleLogin"
                            disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Se connecter
                    </button>

                    <hr />

                    <div class="text-center">
                        <p class="mb-0">Pas encore de compte ?</p>
                        <a href="/register" class="btn btn-outline-secondary mt-2">Créer un compte</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {

    string redirectionPage = "/products";
    private string email = "den.alexandre@gmail.com";
    private string password = "B@rionce";
    private string errorMessage = "";
    private bool isLoading = false;

    [Parameter]
    [SupplyParameterFromQuery]
    public string? Error { get; set; }


    public OrderContext OrderContext { get; set; } = new();

    private string? ErrorMessage;

    protected override async Task OnInitializedAsync()
    {
        var user = (await AuthProvider.GetAuthenticationStateAsync()).User;
        if (user.Identity?.IsAuthenticated == true)
        {
            Navigation.NavigateTo(redirectionPage, true);
        }

        if (Error == "1")
            ErrorMessage = "Email ou mot de passe incorrect.";
    }

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = "";


        try
        {

            var user = (await AuthProvider.GetAuthenticationStateAsync()).User;
            if (user.Identity?.IsAuthenticated == true)
            {
                Navigation.NavigateTo(redirectionPage, true);
            }
            else
            {
                var response = await ApiService.LoginAsync(email, password);

                if (response != null)
                {
                    var provider = (CustomAuthenticationStateProvider)AuthProvider;

                    var claims = new List<Claim>
                {
                    new Claim("UserId", response.User.UserId.ToString()),
                    new Claim(ClaimTypes.NameIdentifier, response.User.UserId.ToString()),
                    new Claim(ClaimTypes.Name, response.User.FirstName),
                    new Claim(ClaimTypes.Email, response.User.Email),
                };

                    claims.Add(new Claim(ClaimTypes.Role, response.User.RoleName));

                    provider.SignIn(response.User.FirstName, claims);


                    var identity = new ClaimsIdentity(
                    claims,
                    CookieAuthenticationDefaults.AuthenticationScheme);

                    var principal = new ClaimsPrincipal(identity);

                    AuthStateService.Login(response.Token, response.User);

                    OrderContext.OrderId  = 0;
                    OrderContext.UserId = response.User.UserId;

                    Navigation.NavigateTo(redirectionPage);
                }
                else
                {
                    errorMessage = "Email ou mot de passe incorrect";
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Erreur de connexion. Veuillez réessayer.";
        }
        finally
        {
            isLoading = false;
        }
    }
}
