@page "/products"
@using Friterie.BlazorServer.Services
@using Friterie.Shared.Models
@inject ApiService ApiService
@inject CartService CartService
@inject NavigationManager Navigation
@implements IDisposable

<PageTitle>Nos Produits - Friterie</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>🍔 Notre Carte</h2>
        <button class="btn btn-primary position-relative" @onclick='() => Navigation.NavigateTo("/cart")'>
            <i class="bi bi-cart3"></i> Panier
            @if (CartService.GetItemCount() > 0)
            {
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    @CartService.GetItemCount()
                </span>
            }
        </button>
    </div>

    <div class="btn-group mb-4" role="group">
        <button class="btn @(selectedCategory == "All" ? "btn-primary" : "btn-outline-primary")"
                @onclick='() => FilterByCategory("All")'>
            Tout
        </button>
        <button class="btn @(selectedCategory == "Burgers" ? "btn-primary" : "btn-outline-primary")"
                @onclick='() => FilterByCategory("Burgers")'>
            🍔 Burgers
        </button>
        <button class="btn @(selectedCategory == "Sauces" ? "btn-primary" : "btn-outline-primary")"
                @onclick='() => FilterByCategory("Sauces")'>
            🥫 Sauces
        </button>
        <button class="btn @(selectedCategory == "Menus" ? "btn-primary" : "btn-outline-primary")"
                @onclick='() => FilterByCategory("Menus")'>
            🍟 Menus
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="visually-hidden">Chargement...</span>
            </div>
            <p class="mt-3">Chargement des produits...</p>
        </div>
    }
    else if (!_products.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>Aucun produit disponible pour le moment.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var product in FilteredProducts)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card h-100 shadow-sm hover-shadow">
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                             style="height: 200px;">
                            <span style="font-size: 4rem;">
                                @(product.TypeProduct.TypeProductNom == "Burgers" ? "🍔" :
                                                        product.TypeProduct.TypeProductNom == "Sauces" ? "🥫" : "🍟")
                            </span>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-muted small flex-grow-1">@product.Description</p>
                            <div class="mb-2">
                                <span class="badge bg-secondary">@product.TypeProduct.TypeProductNom</span>
                                @if (product.Stock < 10)
                                {
                                    <span class="badge bg-warning text-dark">Stock limité</span>
                                }
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <strong class="text-success fs-5">@product.Price.ToString("C")</strong>
                                @if (product.IsAvailable && product.Stock > 0)
                                {
                                    <button class="btn btn-primary btn-sm" @onclick="() => AddToCart(product)">
                                        <i class="bi bi-cart-plus"></i> Ajouter
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-secondary btn-sm" disabled>
                                        Rupture
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<Product> _products = new();
    private string selectedCategory = "All";
    private bool isLoading = true;

    private List<Product> FilteredProducts =>
        selectedCategory == "All"
            ? _products
            : _products.Where(p => p.TypeProduct.TypeProductNom == selectedCategory).ToList();

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
        CartService.OnChange += StateHasChanged;
    }

    private async Task LoadProducts()
    {
        isLoading = true;
        try
        {
            _products = await ApiService.GetProductsAsync();
        }
        catch (Exception ex)
        {
            
        }
        finally
        {
            isLoading = false;
        }
    }

    private void FilterByCategory(string category)
    {
        selectedCategory = category;
    }

    private void AddToCart(Product product)
    {
        CartService.AddItem(product);
    }

    public void Dispose()
    {
        CartService.OnChange -= StateHasChanged;
    }
}